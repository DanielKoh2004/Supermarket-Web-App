using System;
using System.Data;

namespace WebApplication1
{
    public partial class StockLevels : System.Web.UI.Page
    {
        protected void Page_Load(object sender, EventArgs e)
        {
            if (!IsPostBack)
            {
                BindStockData();
            }
        }

        private void BindStockData()
        {
            DataTable dt = new DataTable();
            dt.Columns.Add("ProductID");
            dt.Columns.Add("ProductName");
            dt.Columns.Add("Category");
            dt.Columns.Add("Stock");
            dt.Columns.Add("ReorderLevel");

            dt.Rows.Add("P001", "Apple", "Fruits", "120", "50");
            dt.Rows.Add("P002", "Bread", "Bakery", "45", "30");
            dt.Rows.Add("P003", "Milk", "Dairy", "60", "40");
            dt.Rows.Add("P004", "Detergent", "Household", "25", "15");
            dt.Rows.Add("P005", "Rice", "Grains", "200", "100");

            gvStockLevels.DataSource = dt;
            gvStockLevels.DataBind();
        }
    }
}
