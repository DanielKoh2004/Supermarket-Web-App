using System;
using System.Data;
using System.Data.SqlClient;

namespace SupermarketAdminPage
{
    public partial class StaffReport : System.Web.UI.Page
    {
        string connStr = System.Configuration.ConfigurationManager.ConnectionStrings["OnlineOrderSystemConnection"].ConnectionString;

        protected void Page_Load(object sender, EventArgs e)
        {
            if (!IsPostBack)
            {
                BindStaffReport();
            }
        }
         
        private void BindStaffReport()
        {
            DataTable dt = new DataTable();
            using (SqlConnection conn = new SqlConnection(connStr))
            {
                string query = @"SELECT s.StaffID, s.Name, s.Role, a.Email
                                 FROM Staff s
                                 INNER JOIN Account a ON s.AccountID = a.AccountID";
                SqlDataAdapter da = new SqlDataAdapter(query, conn);
                da.Fill(dt);
            }
            gvStaffReport.DataSource = dt;
            gvStaffReport.DataBind();
        }

        protected void gvStaffReport_RowCommand(object sender, System.Web.UI.WebControls.GridViewCommandEventArgs e)
        {
            if (e.CommandName == "DeleteStaff")
            {
                int rowIndex = Convert.ToInt32(e.CommandArgument);
                var staffId = gvStaffReport.Rows[rowIndex].Cells[0].Text;
                using (var conn = new System.Data.SqlClient.SqlConnection(connStr))
                {
                    conn.Open();
                    // Delete staff by StaffID
                    using (var cmd = new System.Data.SqlClient.SqlCommand("DELETE FROM Staff WHERE StaffID=@StaffID", conn))
                    {
                        cmd.Parameters.AddWithValue("@StaffID", staffId);
                        cmd.ExecuteNonQuery();
                    }
                }
                BindStaffReport(); // Refresh grid
            }
        }
    }
}
